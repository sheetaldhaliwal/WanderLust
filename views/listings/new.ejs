<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
 <div class="col-8 offset-2">
    <!-- <br> -->
    <h2>Create a new Listing</h2>
    <!-- <br> -->
    <form
     method="POST" 
     action="/listings" 
     novalidate class="needs-validation"
      enctype="multipart/form-data">
         
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]"
             placeholder="Add a catchy title"
             type="text" 
             class="form-control"
             required
             />
             <div class="valid-feedback">Tittle looks good</div>
        </div>


       <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]"class="form-control"required></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
       </div>

         <!-- <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input name="listing[image]" placeholder="enter image URL/Link" type="text" class="form-control">
         </div> -->

         <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input name="listing[image]"  type="file" class="form-control" required>
         </div>


         <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]"
                 placeholder="1200" 
                 class="form-control" required>
                <div class="invalid-feedback">Please enter the valid price</div>
            </div>
    
             <div class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" 
                placeholder="Chandigrh,Mohali" 
                type="text" class="form-control" required>
                <div class="invalid-feedback">Please enter the valid location</div>
            </div>
        </div>

         <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" 
            placeholder="India"
             type="text" class="form-control" required>
             <div class="invalid-feedback">Please enter the valid country</div>
         </div>
         
         <button class="btn btn-dark add-btn mt-3">Add </button>
         <br><br>
    </form>
 </div>
</div>

